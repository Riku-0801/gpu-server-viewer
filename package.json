{
  "name": "gpu-server-viewer",
  "displayName": "GPU Server Viewer",
  "description": "Monitor remote GPU servers via SSH",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gpu-server-viewer",
          "title": "GPU Viewer",
          "icon": "resources/gpu-icon.svg"
        }
      ]
    },
    "views": {
      "gpu-server-viewer": [
        {
          "id": "gpuServerList",
          "name": "Servers"
        }
      ]
    },
    "commands": [
      {
        "command": "gpu-server-viewer.refresh",
        "title": "Refresh GPU Status",
        "icon": "$(refresh)"
      },
      {
        "command": "gpu-server-viewer.addServer",
        "title": "Add Server"
      },
      {
        "command": "gpu-server-viewer.openDashboard",
        "title": "Open Dashboard",
        "icon": "$(dashboard)"
      },
      {
        "command": "gpu-server-viewer.connectSsh",
        "title": "Connect SSH",
        "icon": "$(remote)"
      },
      {
        "command": "gpu-server-viewer.configureServers",
        "title": "Configure Servers",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gpu-server-viewer.configureServers",
          "when": "view == gpuServerList",
          "group": "navigation"
        },
        {
          "command": "gpu-server-viewer.refresh",
          "when": "view == gpuServerList",
          "group": "navigation"
        },
        {
          "command": "gpu-server-viewer.addServer",
          "when": "view == gpuServerList",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gpu-server-viewer.connectSsh",
          "when": "view == gpuServerList && viewItem == server",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "GPU Server Viewer",
      "properties": {
        "gpu-server-viewer.sshConfigPath": {
          "type": "string",
          "default": "~/.ssh/config",
          "description": "Path to SSH config file"
        },
        "gpu-server-viewer.targets": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of SSH hosts to monitor"
        },
        "gpu-server-viewer.ignoredHosts": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of SSH hosts to ignore"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  },
  "dependencies": {
    "xml2js": "^0.6.2",
    "@types/xml2js": "^0.4.11"
  }
}
